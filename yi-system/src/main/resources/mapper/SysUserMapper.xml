<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljsy.yisystem.mapper.SysUserMapper">


    <select id="getUserDetailsByUsername" resultType="com.ljsy.yisystem.entity.SysUserDetails" parameterType="String">
        select `id`,`username`,`password` from sys_user where `username` = #{username};
    </select>
</mapper>
